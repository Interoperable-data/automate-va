@prefix era-organisation-roles: <http://data.europa.eu/949/concepts/organisation-roles/> .

# Properties to be post-processed
@prefix update: <http://data.europa.eu/949/update/> .

era:VTAAShape a sh:NodeShape ;

  # ----------- Shape document management
  dcterms:creator [ 
    foaf:name "Maarten Duhoux" ;
    dcterms:source <https://orcid.org/0009-0003-6653-6123> ;
    org:memberOf <http://publications.europa.eu/resource/authority/corporate-body/ERA>
  ] ;
  rdfs:seeAlso "https://oss.era.europa.eu"^^xsd:anyURI ;
  rdfs:comment "This shape enables to collect the general data and Authorisation Case(s) for a C2T VA application. It does NOT collect the submitted Evidence."@en ;
  skos:editorialNote "The shape fails when allowing more than one VehiclesSet in a case, so this must be kept at max 1"@en ;
  dcterms:created "2025-06-24"^^xsd:date ;
  schema:version "0.0.0.3" ;
  # dcterms:modified "2025-05-23"^^xsd:date ;
  # ----------

  sh:targetClass era:VehicleTypeAuthorisationApplication ; # a vpa:Request ;
  sh:property [
    sh:name "Application ID" ;
    sh:path dcterms:identifier ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1
  ];
  sh:property [
    sh:name "OSS Application ID" ;
    sh:description "Only fill in when the application also exists in OSS" ;
    sh:path rdfs:seeAlso ;
    sh:datatype xsd:string ;
    sh:pattern "^V-20\\d{2}[01-12][0-3][1-9]-\\d{3}$" ;
    sh:maxCount 1
  ];
  sh:property [
    # rdfs:label “{{Project Name}}”@de ; # Project Name, in German.
    sh:path rdfs:label ;
    sh:name "Project Name"@en ;
    sh:description "Project Name"@en ;
    sh:datatype rdf:langString ;
    sh:languageIn ( "en" "fr" "de" "es" ) ;
    sh:uniqueLang "true"^^xsd:boolean ;
    sh:maxCount 1 ;
    sh:minLength 6 ;
    sh:minCount 1
  ];
  sh:property [
    # rdfs:comment “{{Other relevant Information}}”@en ;
    sh:name "Other relevant Information"@en ;
    sh:description "Other relevant Information"@en ;
    sh:path rdfs:comment ;
    dash:singleLine false ;
    sh:datatype rdf:langString ;
    sh:languageIn ( "en" "fr" "de" "es" ) ;
    sh:uniqueLang "true"^^xsd:boolean ;
    sh:maxCount 1 ;
    sh:minCount 1
  ];
  sh:property [
    # PreEngagement is a choice
    # era:preEngagementBaseline era:Document
    sh:name "Pre-Engagement" ;
    sh:description "If a pre-engagement baseline was present, quote the reference document.";
    sh:minCount 0 ; # If NOT given, NO pre-engagement
    sh:maxCount 5 ;
    sh:path era:preEngagementBaseline ;
    sh:name "PreEngagement Reference Document"@en ;
    sh:datatype xsd:anyURI;
    # TOO COMPLEX sh:or (
    #   [ sh:node era:PreEngagementShape ; 
    #     sh:name "Yes, pre-engagement baseline" ]
    #   [ sh:node era:noPreEngagementShape  ; 
    #     sh:name "No pre-engagement baseline" ]
    # )
  ];
  sh:property [
    sh:node era:VTACShape ;
    sh:name "Authorisation Case";
    sh:path vpa:constitutedBy ;
    sh:minCount 1 ;
    sh:maxCount 8
  ];
  sh:property [
    # dcterms:creator [ a era:OrganisationRole ; era:roleOf <URI of Applicant> ] ;
    sh:node era:ApplicantOrgRoleShape ;
    # sh:group issform:APP ;
    sh:path dcterms:creator ;
    sh:name "Applicant's Information" ;
    sh:maxCount 1 ;
    sh:minCount 1
  ] .

era:VTACShape a sh:NodeShape ;
   sh:targetClass era:VehicleTypeAuthorisationCase ; ;
   sh:property [
     sh:name "Authorisation Case Type" ;
     sh:path vpa:permissionType ;
     sh:nodeKind sh:IRI ;
     sh:hasValue era-va-authcase:C2T ;
     sh:minCount 1 ;
     sh:maxCount 1
   ];
   sh:property [
   	sh:path vpa:concerns ;
   	sh:name "Concerns VehicleType (one allowed)" ;
   	sh:qualifiedValueShape [ sh:node era:VehicleTypeScopeShape ] ;
   	sh:qualifiedMinCount 1 ;
   	sh:qualifiedMaxCount 1 ;
   ] ;
   sh:property [
   	sh:path vpa:concerns ;
   	sh:name "Concerns Vehicles" ;
   	sh:qualifiedValueShape [ sh:node era:VehiclesSetShape ] ;
   	sh:qualifiedMinCount 1 ;
   	sh:qualifiedMaxCount 1 ; # Shape fails if not exactly set to 1 (or left out)
   ] . 

# The Scope can be one VehicleTypeScopeShape per case
era:VehicleTypeScopeShape a sh:NodeShape ;
  sh:targetClass era:VehicleType ;
  # sh:targetClass vpa:Scope;
  sh:property [
    sh:path dcterms:identifier ;
    sh:name "VehicleType Identifier"@en ;
    sh:pattern "^\\d{2}-\\d{3}-\\d{4}-\\d-(\\d{3}(-\\d{3})?)$" ;
    sh:description "NN-MMM-LLLL-N-VAR(-VER)" ;
    # OK sh:hasValue "12-789-1324-4-007-009" ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:minLength 17 ;
    sh:maxLength 21 ;
    sh:maxCount 1
  ].

# The Scope can be one or more Vehicle Numbers per case
era:VehiclesSetShape a sh:NodeShape ;
  sh:targetClass era:VehicleSet ;
  # sh:targetClass vpa:Scope;
  sh:property [
    sh:name "Vehicle Identifier"@en ;
    sh:description "A correct Vehicle Number (EVN or pre-reserved)" ;
    sh:path rdfs:member ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:pattern "^\\d{11}-\\d{1}$"
  ];
  sh:property [
  # The datatype update: is caught by the form post processor
   sh:name "Pre-reserved Numbers" ;
   sh:path update:arePreReservedNumbers ;
   sh:datatype xsd:boolean ;
   sh:minCount 1 ;   
   sh:maxCount 1 ;
].

# The Applicant must be identified with its OrgCode, it MUST be converted into a URI.
era:ApplicantOrgRoleShape a sh:NodeShape ;
  sh:targetClass era:OrganisationRole ;
  sh:property [
     # For conversion to an org URI
    sh:path era:roleOf ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:name "Confirm applicant" ;
    sh:or (
       [ sh:node era:ApplicantByNamShape ; 
         sh:name "By Name" ]
       [ 
         sh:node era:ApplicantByCodeShape ; 
         sh:name "By Code" ]
    )
  ];
  sh:property [
    sh:path era:hasOrganisationRole ;
    sh:hasValue era-organisation-roles:Applicant ;
    sh:nodeKind sh:IRI ;
    sh:name "Applicant Role" ;
    sh:maxCount 1 ;
  ].

# Id By Name
era:ApplicantByNamShape a sh:NodeShape ;
  sh:targetClass era:Body ;
  sh:property [
    sh:path era:roleOf ;
    sh:name "Applicant Name" ;
    sh:description "Name of the Applicant" ;
    sh:datatype xsd:string ;
    sh:maxCount 1
  ].

# Id by orgCode
era:ApplicantByCodeShape a sh:NodeShape ;
  sh:targetClass era:Body;
  sh:property [
    sh:path era:orgCode ;
    sh:pattern "^\\w{4}$" ; # K3L8 eg.
    sh:description "Confirm your OrgCode as Applicant" ;
    sh:name "Organisation Code" ;
    sh:maxCount 1
  ].
