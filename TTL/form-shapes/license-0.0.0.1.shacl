# Properties to be post-processed, if shacl-form 
@prefix update: <http://data.europa.eu/949/update/> .
era:RailTransportLicenceShape a sh:NodeShape ;
  sh:targetClass era:RailTransportLicense ;
  # 1. Licence issuing State
    # [ sh:name "Issuing State" ;
    #   Is not needed: deduced from the country of dcterms:creator
    # ],
  sh:property
    [ sh:name "National licence No" ;
      sh:path dcterms:identifier ;
      sh:datatype xsd:string ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:ISSUING
    ],
    [ sh:name "Applicable legislation" ;
      sh:path era:applicableLegislation ;
      sh:datatype xsd:string ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:ISSUING
    ],
    [ sh:name "Licensing authority" ;
      sh:path era:licensingAuthority ;
      sh:node   era:LAOrgRoleShape ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:ISSUING
    ],
    [ sh:name "Decision identification" ;
      sh:path era:decisionIdentification ;
      sh:datatype xsd:string ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:ISSUING
    ];
    # [ sh:name "New or Amended" ;
    #   Is not needed: should be through the update/new process (dcterms:replaces...)
    # ]

  # 2.2. Licence holder
  sh:property 
    [ sh:name "Railway Undertaking" ;
      sh:path dcterms:audience ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:node era:LicenseHolderOrgRoleShape ;
      sh:group issform:HOLDER
    ];

    # 3. Validity
    sh:property 
    [ sh:name "Valid from" ;
      sh:path vpa:valid ;
      sh:node era:LicenseValidityShape ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:VALIDITY
    ],
    [ sh:name "Temporary licence" ;
      sh:path era:isTemporary ;
      sh:datatype xsd:boolean ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:VALIDITY
    ],
    [ sh:name "Type of services" ;
      sh:path era:typeOfServices ;

      sh:minCount 1 ; sh:maxCount 3 ;
      sh:group issform:VALIDITY 
    ];

    # 4. Amendments
    sh:property [ sh:name "Amended on" ;
      sh:path era:amendedOn ;
      sh:datatype xsd:date ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:AMENDMENT
    ],
    [ sh:name "Description of amendment" ;
      sh:path era:amendmentDescription ;
      sh:datatype xsd:string ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:AMENDMENT
    ];

    # 5. Conditions and obligations
    sh:property [ sh:name "Conditions and obligations" ;
      sh:path era:conditionsObligations ;
      sh:datatype xsd:string ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:CONDITIONS
    ],
    [ sh:name "EC licence-notification No" ;
      sh:path era:ecLicenceNotificationNumber ;
      sh:datatype xsd:string ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:CONDITIONS
    ],
    [ sh:name "Date" ;
      sh:path era:notificationDate ;
      sh:datatype xsd:date ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:CONDITIONS
    ],
    [ sh:name "Name" ;
      sh:path foaf:name ;
      sh:datatype xsd:string ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:CONDITIONS
    ]
  .

  # Name OR role (to convert into URI!)
# The Applicant must be identified with its OrgCode, it MUST be converted into a URI.
era:LicenseHolderOrgRoleShape a sh:NodeShape ;
  sh:targetClass era:OrganisationRole ;
  sh:property [
    sh:name "Railway Undertaking Role" ;
    sh:path era:hasOrganisationRole ;
    sh:hasValue era-organisation-roles:RailwayUndertaking ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ] , [
    # For conversion to an org URI
    sh:path era:roleOf ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:name "Confirm Railway Undertaking" ;
    sh:or (
      [ sh:node era:ByNameShape ; 
        sh:name "Railway Undertaking Name" ]
      [ 
        sh:node era:ByCodeShape ; 
        sh:name "Railway Undertaking Code" ]
    )
  ] .


  # The Applicant must be identified with its OrgCode, it MUST be converted into a URI.
  era:LAOrgRoleShape a sh:NodeShape ;
    sh:targetClass era:OrganisationRole ;
    sh:property [
      # For conversion to an org URI
      sh:name "Confirm Licensing Authority" ;
      sh:path era:roleOf ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:or (
        [ sh:node era:ByNameShape ; 
          sh:name "Licensing Authority Name" ]
        [ 
          sh:node era:ByCodeShape ; 
          sh:name "Licensing Authority Code" ]
      )
    ];
    sh:property [
      sh:name "Licensing Authority Role" ;
      sh:description "Role of the Licensing Authority" ;
      sh:path era:hasOrganisationRole ;
      sh:hasValue era-organisation-roles:NationalSafetyAuthority ;
      sh:nodeKind sh:IRI ;
      sh:minCount 1 ; sh:maxCount 1 ;
    ].

  # Id By Name
  era:ByNameShape a sh:NodeShape ;
    sh:targetClass era:Body ;
    sh:property [
      sh:path era:roleOf ;
      sh:name "Name" ;
      sh:description "Name" ;
      sh:datatype xsd:string ;
      sh:maxCount 1
    ].

  # Id by orgCode
  era:ByCodeShape a sh:NodeShape ;
    sh:targetClass era:Body;
    sh:property [
      sh:path era:orgCode ;
      sh:pattern "^\\w{4}$" ; # K3L8 eg.
      sh:description "Confirm your OrgCode" ;
      sh:name "Organisation Code" ;
      sh:maxCount 1
    ].


  # Validity is a time: instance
  era:LicenseValidityShape  a sh:NodeShape ;
    sh:targetClass time:Interval ;
    sh:property [
      sh:name "Starting date" ;
      sh:path time:hasBeginning ;
      sh:minCount 1 ;     sh:maxCount 1 ;
      sh:node [
        sh:targetClass time:Instant ;
        sh:property [
          sh:maxCount 1 ;
          sh:path time:inXSDDate ;
          sh:datatype xsd:date ;
          sh:name "3.1 Validity from" ;
        ]
      ];
  ] , [
      sh:path time:hasEnd ;
      sh:name "Ending date" ;
      sh:minCount 1 ;     sh:maxCount 1 ;
      sh:node [
        sh:targetClass time:Instant ;
        sh:minCount 1 ;   sh:maxCount 1 ;
        sh:property [
          sh:maxCount 1 ;
          sh:path time:inXSDDate ;
          sh:datatype xsd:date ;
          sh:name "3.2 Validity to (included)" ;
        ]
      ]
  ] .


