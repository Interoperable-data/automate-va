# NodeShape for Safety Certificate - Part A
era:SafetyCertificateAShape a sh:NodeShape ;
  sh:targetClass era:Certificate ;
  sh:property 
    # [ sh:name "Certificate language" ;
    #   Is not needed: languages are determined by langString usage.
    # ],
    [
    sh:description "This is a Safety Certificate - Part A" ;
    sh:name "This is a" ;
    sh:path dcterms:type ;
    sh:hasValue era-permission-types:SafetyCertificateA ; # OK
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:group issform:CT
    ], 
    # [ sh:name "Certificate type" ;
    #   sh:path dcterms:type ;
    #   Is not needed: RENEW|REVOKE|AMEND is another form, and leads to dcterms:isReplacedBy
    # ],
    [ sh:name "1.5 EU Identification Number" ;
      sh:path dcterms:identifier ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:pattern "^[A-Z]{2}(10|11)[2-9][0-9]{3}[0-9]{4}$" ;
      sh:group issform:CT
    ],
    # [ sh:name "Country Issuing The Safety Certificate" ;
    #   Is not needed as it is deduced from the Site of the Issuing Organisation
    # ],
    # [ sh:name "EU identification number of the previous certificate" ;
    #   sh:path dcterms:replaces ;
    #   Is not needed as link is created automatically when the previous certificate is replaced
    # ],
    [ sh:name "1.7 ECM certificate number" ;
      sh:path era:certificateNumber ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:group issform:CT
    ],
    [ sh:name "2 Railway Undertaking (Lookup by OrgCode or name)" ;
      sh:path dcterms:audience ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:nodeKind sh:IRI ;
      sh:qualifiedValueShape [ sh:node era:RUOrgRoleShape ] ;
      sh:group issform:RU
    ] , [
      sh:name "3 Validity" ;
      sh:path dcterms:valid ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:node era:CertificateValidityShape ;
      sh:group issform:CI 
    ];

    # TYPE AND EXTENT OF SERVICE of the RU
    sh:property     
    [ sh:name "4.1 Railway Undertaking Size" ;
      sh:path era:undertakingSize ;
      sh:in ( "Micro enterprise" "Small enterprise" "Medium enterprise" "Large enterprise" ) ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:group issform:SERV
    ],
    [ sh:name "High-speed operation" ;
      sh:path era:coversHighSpeed ;
      sh:datatype xsd:boolean ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:SERV
    ],
    [ sh:name "Dangerous goods operation" ;
      sh:path era:coversDangerousGoods ;
      sh:datatype xsd:boolean ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:SERV
    ],
    [ sh:name "Shunting only" ;
      sh:path era:coversOnlyShunting ;
      sh:datatype xsd:boolean ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:group issform:SERV
    ],
    [ sh:name "Service/s to begin in" ;
      sh:path dcterms: ;
      sh:datatype xsd:date ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:group issform:SERV
    ],
    [ sh:name "Transportation Volume Passenger" ;
      sh:path era:transportationVolumePassenger ;
      sh:in ( "Less than 200 MPkm/year" "200MPkm/year and more" ) ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:group issform:SERV
    ],
    [ sh:name "Transportation Volume Freight" ;
      sh:path era:transportationVolumeFreight ;
      sh:in ( "Less than 500 MTonneskm/year" "500 MTonneskm/year and more" ) ;
      sh:minCount 0 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:group issform:SERV
    ];

    # 5 -- Other
    sh:property [ 
      sh:name "5.1 Applicable national legislation" ;
      sh:path dcterms:source ;
      sh:minCount 1 ; sh:maxCount 1 ;
      sh:datatype xsd:string ;
      sh:group issform:OTH
    ],[
      sh:name "5.2 Additional Information"@en ;
      sh:path rdfs:comment ;
      dash:singleLine false ;
      sh:datatype xsd:string ;
      sh:group issform:OTH
    ]    ;
    
    # 6 -- Issuing Organisation
    sh:property  [
      sh:name "6. Issuing Organisation" ;
      sh:path dcterms:creator ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:qualifiedValueShape[sh:node era:NSAOrgRoleShape]  ;
      sh:group issform:CB
    ].


####### Additional helper NODES
# Name OR role (to convert into URI!)
# The Applicant must be identified with its OrgCode, it MUST be converted into a URI.
era:RUOrgRoleShape a sh:NodeShape ;
  sh:targetClass era:OrganisationRole ;
  sh:property [
    sh:name "Railway Undertaking Role" ;
    sh:path era:hasOrganisationRole ;
    sh:hasValue era-organisation-roles:RailwayUndertaking ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
  ] , [
    # For conversion to an org URI
    sh:path era:roleOf ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:name "Confirm Railway Undertaking" ;
    sh:or (
      [ sh:node era:ByNameShape ; 
        sh:name "Railway Undertaking Name" ]
      [ 
        sh:node era:ByCodeShape ; 
        sh:name "Railway Undertaking Code" ]
    )
  ] .



# The Applicant must be identified with its OrgCode, it MUST be converted into a URI.
  era:NSAOrgRoleShape a sh:NodeShape ;
    sh:targetClass era:OrganisationRole ;
    sh:property [
      # For conversion to an org URI
      sh:name "Confirm Issuing Organisation" ;
      sh:path era:roleOf ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:or (
        [ sh:node era:ByNameShape ; 
          sh:name "Issuing Organisation Name" ]
        [ 
          sh:node era:ByCodeShape ; 
          sh:name "Issuing Organisation Code" ]
      )
    ];
    sh:property [
      sh:name "Issuing Organisation Role" ;
      sh:description "Role of the Issuing Organisation" ;
      sh:path era:hasOrganisationRole ;
      sh:hasValue era-organisation-roles:NationalSafetyAuthority ;
      sh:nodeKind sh:IRI ;
      sh:minCount 1 ; sh:maxCount 1 ;
    ].

  # Id By Name
  era:ByNameShape a sh:NodeShape ;
    sh:targetClass era:Body ;
    sh:property [
      sh:path era:roleOf ;
      sh:name "Name" ;
      sh:description "Name" ;
      sh:datatype xsd:string ;
      sh:maxCount 1
    ].

  # Id by orgCode
  era:ByCodeShape a sh:NodeShape ;
    sh:targetClass era:Body;
    sh:property [
      sh:path era:orgCode ;
      sh:pattern "^\\w{4}$" ; # K3L8 eg.
      sh:description "Confirm your OrgCode" ;
      sh:name "Organisation Code" ;
      sh:maxCount 1
    ].


  # Validity is a time: instance
  era:CertificateValidityShape  a sh:NodeShape ;
    sh:targetClass time:Interval ;
    sh:property [
      sh:name "Starting date" ;
      sh:path time:hasBeginning ;
      sh:minCount 1 ;     sh:maxCount 1 ;
      sh:node [
        sh:targetClass time:Instant ;
        sh:property [
          sh:maxCount 1 ;
          sh:path time:inXSDDate ;
          sh:datatype xsd:date ;
          sh:name "3.1 Validity from" ;
        ]
      ];
  ] , [
      sh:path time:hasEnd ;
      sh:name "Ending date" ;
      sh:minCount 1 ;     sh:maxCount 1 ;
      sh:node [
        sh:targetClass time:Instant ;
        sh:minCount 1 ;   sh:maxCount 1 ;
        sh:property [
          sh:maxCount 1 ;
          sh:path time:inXSDDate ;
          sh:datatype xsd:date ;
          sh:name "3.2 Validity to (included)" ;
        ]
      ]
  ] .



issform:CT a sh:PropertyGroup ;
  rdfs:label "1 - Certificate Details"@en .
issform:RU a sh:PropertyGroup ;
  rdfs:label "2 - Railway Undertaking"@en .
issform:VAL a sh:PropertyGroup ;
  rdfs:label "3 - Validity"@en .
issform:SERV a sh:PropertyGroup ;
  rdfs:label "4 - Type and Extent of Service"@en .
issform:OTH a sh:PropertyGroup ;
  rdfs:label "5 - Other"@en .
