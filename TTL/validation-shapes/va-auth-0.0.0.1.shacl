@base <http://data.europa.eu/949/> .
@prefix era: <http://data.europa.eu/949/> .
@prefix era-sh: <http://data.europa.eu/949/shapes/> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix vpa: <http://w3id.org/vpa#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# SHACL shape to check EIN format on VehicleTypeAuthorisation identifier

era-sh:AuthorisationCaseEINShape a sh:NodeShape ;
  sh:targetClass era:VehicleTypeAuthorisationCase ;
  sh:property [
    sh:path (vpa:constitutes vpa:requestFor dcterms:identifier) ;
    sh:sparql [
      a sh:SPARQLConstraint ;
      sh:message "EIN identifier must be in the format CC/NN/YYYY/nnnn, with valid values for each part." ;
      sh:select """
        SELECT $this ?value
        WHERE {
          BIND(?value AS ?id)
          # Extract CC, NN, YYYY, nnnn from the identifier
          BIND(STRBEFORE(?id, "/") AS ?CC)
          BIND(STRBEFORE(STRAFTER(?id, "/"), "/") AS ?NN)
          BIND(STRBEFORE(STRAFTER(STRAFTER(?id, "/"), "/"), "/") AS ?YYYY)
          BIND(STRAFTER(STRAFTER(STRAFTER(?id, "/"), "/"), "/") AS ?NNNN)
          # Validate format and values (adjust as needed)
          FILTER (
            !REGEX(?id, "^[A-Z]{2}/\\d{2}/\\d{4}/\\d{4}$") ||
            STRLEN(?CC) != 2 ||
            STRLEN(?NN) != 2 ||
            STRLEN(?YYYY) != 4 ||
            STRLEN(?NNNN) != 4 ||
            ?NNNN = "0000"
          )
        }
      """ ;
    ] ;
    sh:name "EIN format for Authorisation identifier"@en ;
    sh:description "Checks that the identifier of the VehicleTypeAuthorisation linked from the AuthorisationCase has a valid EIN format for the current year."@en ;
  ] .
######################################################################
# ConstraintComponent for EIN with year as parameter

era-sh:EINYearConstraintComponent
  a sh:ConstraintComponent ;
  sh:parameter [
    sh:path era-sh:currentYear ;
    sh:datatype xsd:gYear ;
    sh:name "Current Year" ;
    sh:description "The current year for EIN validation (inclusive upper bound)." ;
  ] ;
  sh:propertyValidator [
    a sh:SPARQLSelectValidator ;
    sh:message "EIN identifier must be in the format CC/NN/YYYY/nnnn, with YYYY between 2000 and {$currentYear}." ;
    sh:select """
      SELECT $this ?value
      WHERE {
        $this $PATH ?value .
        BIND(?value AS ?id)
        BIND(STRBEFORE(?id, "/") AS ?CC)
        BIND(STRBEFORE(STRAFTER(?id, "/"), "/") AS ?NN)
        BIND(STRBEFORE(STRAFTER(STRAFTER(?id, "/"), "/"), "/") AS ?YYYY)
        BIND(STRAFTER(STRAFTER(STRAFTER(?id, "/"), "/"), "/") AS ?NNNN)
        BIND(xsd:integer(?YYYY) AS ?yearInt)
        BIND(xsd:integer($currentYear) AS ?currentYearInt)
        FILTER (
          !REGEX(?id, "^[A-Z]{2}/\\d{2}/\\d{4}/\\d{4}$") ||
          STRLEN(?CC) != 2 ||
          STRLEN(?NN) != 2 ||
          STRLEN(?YYYY) != 4 ||
          STRLEN(?NNNN) != 4 ||
          ?NNNN = "0000" ||
          ?yearInt < 2000 ||
          ?yearInt >= ?currentYearInt
        )
      }
    """ ;
  ] .

######################################################################
# NodeShape using the above ConstraintComponent

era-sh:AuthorisationCaseEINYearShape a sh:NodeShape ;
  sh:targetClass era:VehicleTypeAuthorisationCase ;
  sh:property [
    sh:path (vpa:constitutes vpa:requestFor dcterms:identifier) ; # provides $PATH    era-sh:currentYear "2025"^^xsd:gYear ; # Triggers the validation through the property
    sh:name "EIN format for Authorisation identifier (year-bounded)"@en ;
    sh:description "Checks that the identifier of the VehicleTypeAuthorisation linked from the AuthorisationCase has a valid EIN format and a year between 2000 and the current year."@en ;
  ] .

