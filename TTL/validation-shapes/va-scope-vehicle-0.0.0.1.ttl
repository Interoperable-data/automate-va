      sh:severity sh:Violation .

# Vehicle validation shape for VA scope
era-sh:VehicleShape a sh:NodeShape ;
  rdfs:label "Vehicle Validation Shape"@en ;
  rdfs:comment "Validates core requirements for Vehicle instances in the VA scope."@en ;
  sh:targetClass era:Vehicle ;
  sh:property [
    sh:path dcterms:identifier ;
    sh:name "Vehicle Identifier" ;
    sh:description "Mandatory unique string identifier for the vehicle." ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:uniqueLang true ;
    sh:severity sh:Violation ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:name "Vehicle Label" ;
    sh:description "Mandatory unique string label for the vehicle." ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:uniqueLang true ;
    sh:severity sh:Violation ;
  ] ;
  sh:property [
    sh:path era:vehicleType ;
    sh:name "Vehicle Type" ;
    sh:description "IRI to the vehicle type. Must be present and an IRI." ;
    sh:nodeKind sh:IRI ;
    sh:node era-sh:VehicleTypeShape ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
  ] ;
  sh:property [
    sh:path era:vehicleNumber ;
    sh:name "Vehicle Number" ;
    sh:description "Mandatory vehicle number." ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:severity sh:Violation ;
  ] ;
  sh:property [
    sh:path era:vehicleSeries ;
    sh:name "Vehicle Series" ;
    sh:description "Recommended vehicle series." ;
    sh:datatype xsd:string ;
    sh:minCount 0 ;
    sh:severity sh:Warning ;
  ] ;
  sh:property [
    a sh:PropertyShape ;
    sh:path era:vehicleKeeper ;
    sh:name "(registered types) exactly one Vehicle Keeper" ;
    sh:description "Keeper must be provided as an IRI when the linked vehicle type has a dcterms:issued date." ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    sh:severity sh:Violation ;
  ] ;
  sh:sparql [
    a sh:SPARQLConstraint ;
    sh:message "Vehicle keeper must be provided as an IRI when the related vehicle type ({$vt}) is formally issued."@en ;
    sh:message "Vehicle with an issued vehicle type is missing a keeper IRI."@en ;
    sh:select """
      PREFIX era: <http://data.europa.eu/949/>
      PREFIX dcterms: <http://purl.org/dc/terms/>
      SELECT ?this ?vt WHERE {
        ?this era:vehicleType ?vt .
        ?vt dcterms:issued ?issued .
        FILTER NOT EXISTS {
          ?this era:vehicleKeeper ?keeper .
          FILTER ( isIRI(?keeper) )
        }
      }
    """ ;
  ];
  sh:property [
    a sh:PropertyShape ;
    sh:path era:compositeBrakeBlockRetrofitted ;
    sh:description "Vehicles whose type is category 51 (Freight wagons â€“ hauled) must state whether composite brake blocks are retrofitted." ;
    sh:datatype xsd:boolean ;
    sh:maxCount 1 ;
    sh:severity sh:Violation ;
    sh:message "Vehicle of category 51 must provide ONE boolean compositeBrakeBlockRetrofitted flag."@en ;
  ] ;
  sh:sparql [
    a sh:SPARQLConstraint ;
    sh:name "Composite Brake Block Retrofitted" ;
    sh:message "Vehicle of category 51 is missing compositeBrakeBlockRetrofitted."@en ;
    sh:select """
      PREFIX era: <http://data.europa.eu/949/>
      PREFIX era-vehicle-types-eratv: <http://data.europa.eu/949/concepts/vehicle-types/eratv/>
      SELECT ?this ?vt WHERE {
        ?this era:vehicleType ?vt .
        ?vt era:vehicleTypeCategory era-vehicle-types-eratv:51 .
        FILTER NOT EXISTS { ?this era:compositeBrakeBlockRetrofitted ?flag . }
      }
    """ ;
  ];
  sh:sparql [
    a sh:SPARQLConstraint ;
    sh:name "Operational Restriction for category 51" ;
    sh:severity sh:Warning ;
    sh:message "Vehicle of category 51 is missing operationalRestriction."@en ;
    sh:select """
      PREFIX era: <http://data.europa.eu/949/>
      PREFIX era-vehicle-types-eratv: <http://data.europa.eu/949/concepts/vehicle-types/eratv/>
      SELECT ?this WHERE {
        ?this era:vehicleType ?vt .
        ?vt era:vehicleTypeCategory era-vehicle-types-eratv:51 .
        FILTER NOT EXISTS { ?this era:operationalRestriction ?restriction . }
      }
    """ ;
  ].